@require 'mixins.styl'
@require 'poke_pos.styl'
@require 'pokesprite.css'

*
  box-sizing: border-box

body
  background: #ebebeb
  font-family: 'Fira Mono', Helvetica, Arial, sans-serif
  padding: 0
  margin: 0
  color: #333

  &.no-scroll
    overflow: hidden

input, button
  font-family: 'Fira Mono', Helvetica, Arial, sans-serif

  &:focus
    outline: none

h1
  font-size: 24px
  padding: 10px

.container
  position: relative
  width: 1001px
  margin: 0 auto

  .main-header
    margin: 0

// Lcation overlay
.pokemon-location
  position: fixed
  top: 0 
  left: 0 
  right: 0
  bottom: 0
  background: rgba(0, 0, 0, 0.8)
  z-index: 99

  .location-content
    position: absolute
    top: 80px
    height: 500px
    left: 50%
    width: 600px
    margin-left: -300px
    background: white
    border-radius: 5px
    overflow: hidden

    .location-header
      text-align: center
      padding: 5px
      border-bottom: 1px solid #ebebeb
      background: #336633
      color: white
      position: relative

      .show-details
        position: absolute
        top: 7px
        text-align: right
        right: 5px
        color: white
        background: transparent
        border: none
        cursor: pointer

        &:hover
          text-decoration: underline

        &.is-hidden
          display: none

    .location-body
      padding: 8px  
      position: absolute
      top: 36px
      left: 0
      right: 0
      bottom: 0
      overflow: hidden

      &.details-active
        overflow-y: auto

        .location-table:not(.details)
          opacity: 0.15

    .details-pane
      position: absolute
      z-index: 15
      top: 8px
      left: 100%
      width: 100%
      background: #f4f4f4
      border-top-left-radius: 5px
      border-bottom-left-radius: 5px
      border: 1px solid #ccc
      transition: transform 0.3s
      box-shadow: 1px 1px 3px #999

      &.is-active
        transform: translateX(-99%) translateZ(0)

      .details-header
        text-align: center
        background: #ccc
        color: #333
        margin-bottom: 5px

    .location-table
      width: 100%
      font-size: 14px
      width: 100%

      &.details
        .headers
          font-weight: bold
          text-decoration: underline

        .location td
          font-size: 12px
          padding: 0 3px

      td
        padding: 3px

      [class*='pokemon-']
        text-align: center
        color: white

        + .location
          white-space: pre-wrap

      .pokemon-x td:first-child
        background: #005C95

      .pokemon-y td:first-child
        background: #D12242
      
      .pokemon-or td:first-child
        background: #DA1A21
      
      .pokemon-as td:first-child
        background: #00A2D9

// List view
.pokemon-gens
  position: relative

  .info-box
    position: fixed
    top: 8px
    right: 0
    z-index: 20
    width: 150px

    .total-captured
      height: 30px
      line-height: 30px
      text-align: center
      background: #ccc
      font-size: 12px
      margin-top: 10px

    .gen-filter-header
      text-align: center
      height: 25px
      font-size: 13px
      background: rgb(179, 62, 52)
      color: white
      line-height: 25px

    .gen-filter
      list-style: none
      margin: 0
      padding: 0
      font-size: 11px
      
      .gen-filter-item
        height: 20px
      
        label
          padding: 3px
          display: block
          height: 20px


.pokemon-list
  list-style: none
  margin: 0
  border-left: 1px solid #ccc
  border-top: 1px solid #ccc
  padding: 0
  clearfix()
  position: relative
  margin-bottom: 15px

  .gen-marker
    position: absolute
    top: 0
    left: 0
    margin-left: -160px
    width: 150px

    header
      font-size: 13px
      text-align: center
      height: 25px
      line-height: 25px
      background: #999
      color: white

    .gen-games
      padding: 0
      margin: 0
      list-style: none

      .gen-game
        font-size: 11px
        color: white
        text-align: center

    .gen-collected
      font-size: 11px
      text-align: center
      border: 2px solid #666
      height: 25px
      line-height: 25px
      color: #333
      position: relative
      overflow: hidden

      .collected-progress
        position: absolute
        z-index: -1
        top: 0
        left: 0
        bottom: 0
        width: 0%
        background: #ccc

  .poke-list-item
    height: 100px
    width: 100px
    float: left
    border-bottom: 1px solid #ccc
    border-right: 1px solid #ccc
    position: relative
    cursor: pointer
    -webkit-user-select: none
    user-select: none

    &:hover, &.is-selected
      background-color: #ebebeb

      .caught
        display: block

    &.is-selected
      opacity: 0.6

      .caught
        -webkit-filter: none
        filter: none

    &.is-selected
      background-color: inherit

    .num
      color: #999
      display: block
      position: absolute
      top: 3px
      left: 3px
      font-size: 12px
      text-align: center

    .caught
      background: url(/client/images/ball.png) no-repeat 0 0
      width: 16px
      height: 16px
      position: absolute
      top: 5px
      right: 5px
      -webkit-filter: grayscale(100%)
      filter: grayscale(100%)
      display: none
      z-index: 10
  
    .name 
      position: absolute
      bottom: 5px
      left: 0
      right: 0
      text-align: center
      font-size: 11px
    
    .pkspr
      left: 50%
      top: 25px
      margin-left: -20px

// List filter
.pokemon-list-filter
  position: absolute
  top: 4px
  width: 430px
  right: 0
  height: 50px

  .filter
    display: block
    width: 100%
    height: 100%
    line-height: 40px
    font-size: 26px
    padding: 10px
    border: none
    outline: none
    background: transparent
    color: #333
    padding-right: 30px

    &:focus
      outline: none

  .clear-filter
    position: absolute
    right: 5px
    height: 18px
    width: 15px
    top: 13px
    background: none
    outline: none
    border: none
    font-size: 16px
    color: #666
    cursor: pointer

// Evolve family
.pokemon-evolve-family
  height: 100px
  display: table
  width: 100%

  .family-member
    display: table-cell
    vertical-align: middle
    text-align: center
    clearfix()

    .requirements
      float: left
      width: 100px
      font-size: 10px
      line-height: 12px
      min-height: 30px
      position: relative
      padding: 3px

      &:after
        content: '>'
        display: block
        position: absolute
        top: 50%
        left: 50%
        width: 50px
        margin-left: -25px
        height: 16px
        margin-top: -8px
        background: #faeb41
        z-index: 0

      .req
        position: relative
        z-index: 1
        padding: 1px
        border-radius: 4px
        color: #666
        border: 1px solid #ccc
        background: #ebebeb

    .member
      display: inline-block

      .name
        display: inline-block
        font-size: 10px
        text-align: center
        border: 1px solid #999
        background: #ebebeb
        border-radius: 20px
        padding: 0 4px
        cursor: pointer

  .family-fork
    display: table-cell
    vertical-align: middle

    .family-member
      vertical-align: middle
      display: table-row
      text-align: center

  [class*='pkmn-'] 
    vertical-align: middle
    cursor: pointer

    > i
      transform: scale(1)

.loading
  position: absolute
  top: 36px
  left: 0
  right: 0
  bottom: 0
  text-align: center
  padding-top: 200px
  background: white

// Media queries
@media(max-width: 1340px)
  @import 'med-screen'