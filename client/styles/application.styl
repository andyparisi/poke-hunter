@require 'mixins.styl'
@require 'poke_pos.styl'
@require 'pokesprite.css'

*
  box-sizing: border-box

body
  background: #ebebeb
  font-family: 'Fira Mono', Helvetica, Arial, sans-serif
  padding: 0
  margin: 0
  color: #333

  &.no-scroll
    overflow: hidden

input, button
  font-family: 'Fira Mono', Helvetica, Arial, sans-serif

  &:focus
    outline: none

h1
  font-size: 24px
  padding: 10px

.container
  position: relative
  width: 1001px
  margin: 0 auto

  .main-header
    margin: 0

.pokemon-location
  position: fixed
  top: 0 
  left: 0 
  right: 0
  bottom: 0
  background: rgba(0, 0, 0, 0.8)
  z-index: 99

  .location-content
    position: absolute
    top: 80px
    height: 500px
    left: 50%
    width: 600px
    margin-left: -300px
    background: white
    border-radius: 5px
    overflow: hidden

    .location-header
      text-align: center
      padding: 5px
      border-bottom: 1px solid #ebebeb
      background: #336633
      color: white
      position: relative

      .show-details
        position: absolute
        top: 7px
        text-align: right
        right: 5px
        color: white
        background: transparent
        border: none
        cursor: pointer

        &:hover
          text-decoration: underline

        &.is-hidden
          display: none

    .location-body
      padding: 8px  
      position: absolute
      top: 36px
      left: 0
      right: 0
      bottom: 0
      overflow: hidden

      &.details-active
        overflow-y: auto

        .location-table:not(.details)
          opacity: 0.15

    .details-pane
      position: absolute
      top: 8px
      left: 100%
      width: 100%
      background: #f4f4f4
      border-top-left-radius: 5px
      border-bottom-left-radius: 5px
      border: 1px solid #ccc
      transition: transform 0.3s
      box-shadow: 1px 1px 3px #999

      &.is-active
        transform: translateX(-99%) translateZ(0)

      .details-header
        text-align: center
        background: #ccc
        color: #333
        margin-bottom: 5px

    .location-table
      width: 100%
      font-size: 14px
      width: 100%

      &.details
        .headers
          font-weight: bold
          text-decoration: underline

        .location td
          font-size: 12px
          padding: 0 3px

      td
        padding: 3px

      [class*='pokemon-']
        text-align: center
        color: white

        + .location
          white-space: pre-wrap

      .pokemon-x td:first-child
        background: #005C95

      .pokemon-y td:first-child
        background: #D12242
      
      .pokemon-or td:first-child
        background: #DA1A21
      
      .pokemon-as td:first-child
        background: #00A2D9

.pokemon-list
  list-style: none
  margin: 0
  border-left: 1px solid #ccc
  border-top: 1px solid #ccc
  padding: 0
  clearfix()

  .poke-list-item
    height: 100px
    width: 100px
    float: left
    border-bottom: 1px solid #ccc
    border-right: 1px solid #ccc
    position: relative
    cursor: pointer
    -webkit-user-select: none
    user-select: none

    &:hover, &.is-selected
      background-color: #ebebeb

      .caught
        display: block

    &.is-selected
      .caught
        -webkit-filter: none
        filter: none

    &.is-selected
      background-color: inherit

    .num
      color: #999
      display: block
      position: absolute
      top: 3px
      left: 3px
      font-size: 12px
      text-align: center

    .caught
      background: url(/client/images/ball.png) no-repeat 0 0
      width: 16px
      height: 16px
      position: absolute
      top: 5px
      right: 5px
      -webkit-filter: grayscale(100%)
      filter: grayscale(100%)
      display: none
      z-index: 10
  
    .name 
      position: absolute
      bottom: 5px
      left: 0
      right: 0
      text-align: center
      font-size: 11px
    
    .pkspr
      left: 50%
      top: 25px
      margin-left: -20px

.pokemon-list-filter
  position: absolute
  top: 4px
  left: 250px
  right: 0
  height: 50px

  input
    display: block
    width: 100%
    height: 100%
    line-height: 50px
    font-size: 50px
    padding: 10px
    font-size: 50px
    border: none
    outline: none
    background: transparent
    color: #333

    &:focus
      outline: none